{
  "name": "watchtower-pro",
  "version": "0.1.0",
  "description": "Advanced website monitoring and alert platform for Whop creators",
  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "whop-proxy --command 'next dev --turbopack'",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "db:push": "prisma db push",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "db:migrate": "prisma migrate dev",
    "db:reset": "prisma migrate reset",
    "monitoring:start": "tsx scripts/start-monitoring.ts",
    "monitoring:demo": "tsx examples/monitoring-examples.ts",
    "monitoring:health": "tsx -e \"import { healthCheck } from './lib/monitoring/init'; healthCheck().then(console.log)\"",
    "monitoring:test": "tsx -e \"import { runMonitoringDemo } from './examples/monitoring-examples'; runMonitoringDemo().then(() => console.log('Demo completed!'))\"",
    "db:setup": "tsx scripts/setup-database.ts",
    "health": "curl -f http://localhost:3000/api/health || exit 1",
    "test:e2e": "echo 'E2E tests not implemented yet'",
    "clean": "rm -rf .next out dist",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@prisma/client": "^5.22.0",
    "@radix-ui/react-alert-dialog": "^1.1.2",
